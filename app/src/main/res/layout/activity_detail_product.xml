<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailItem">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/profile_detail"
        tools:ignore="MissingConstraints">

        <!-- Nav Section -->
        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/backButton"
                    android:layout_width="45dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/icon_shape" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginVertical="10dp"
                    android:layout_marginStart="13dp"
                    android:src="@drawable/baseline_arrow_back_ios_24" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/moreButton"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/icon_shape" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/baseline_more_horiz_24" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="330dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/berbecue_pork" />
        </LinearLayout>

        <!-- Image Section -->

<!--         Bottom Card -->
        <FrameLayout
            android:layout_width="match_parent"
            android:background="@drawable/rounded_container"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <!-- Profile Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="20dp"
                    android:orientation="horizontal"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Barbecue Pork"
                            android:textSize="30sp"
                            android:textColor="#000000"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="$20.00"
                            android:textSize="25sp"
                            android:textColor="#FF5722" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:textAlignment="center">

<!--                            <TextView-->
<!--                                android:layout_width="0dp"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:layout_weight="1"-->
<!--                                android:text="On sale for"-->
<!--                                android:textColor="@color/variant"-->
<!--                                android:textSize="16sp"-->
<!--                                app:layout_constraintBottom_toBottomOf="parent" />-->
                            <RatingBar
                                android:layout_width="240dp"
                                android:layout_height="50dp"
                                android:rating="4.9"
                                android:numStars="5"
                                android:stepSize="0.1"
                                android:isIndicator="true"
                                android:layout_marginTop="8dp"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Description Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Description"
                        android:textColor="@color/text"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pizza made with bbq sauce, mozzarella, chicken, red onions and cilantro"
                        android:textColor="@color/variant"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Button Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="20dp"
                    android:orientation="horizontal">

                    <Button
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/category_buttun"
                        android:text="Buy Now"
                        android:textColor="@color/accent"
                        android:textSize="18sp" />

                    <Button
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="140dp"
                        android:layout_height="60dp"
                        android:background="@drawable/category_buttun"
                        android:backgroundTint="@color/accent"
                        android:text="Cancel"
                        android:textColor="@color/detailItem"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
