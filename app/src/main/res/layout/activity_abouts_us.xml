<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="889dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp"
            android:background="@color/black"
            tools:layout_editor_absoluteY="1dp"
            tools:ignore="MissingConstraints">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/variant" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="30dp"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="About Me"
                    android:textSize="30sp"
                    android:textColor="@color/text"
                    />
                <View
                    android:layout_width="55dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="50dp"
                    android:background="@color/primary" />
            </RelativeLayout>
            <!--   Name    -->
            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name :"
                    android:textColor="@color/text"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="Samat Chim Minea"
                    android:textColor="@color/text"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Id :"
                    android:textColor="@color/text"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="85dp"
                    android:text="65210324"
                    android:textColor="@color/text"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="College :"
                    android:textColor="@color/text"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35dp"
                    android:text="CosT"
                    android:textColor="@color/text"
                    android:textSize="20dp" />
            </LinearLayout>
            <View
                android:layout_marginVertical="30dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/variant" />
            <!--        project title -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"

                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="About Project"
                    android:textSize="30sp"
                    android:textColor="@color/text"
                    />
                <View
                    android:layout_width="55dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="50dp"
                    android:background="@color/primary" />
            </RelativeLayout>
            <!--   About project    -->
            <TextView
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to My Pizza Shop! It is designed to make the ordering process quick, convenient, and hassle-free for customers."
                android:textSize="18sp"
                android:textColor="@color/text"
                />
            <!--        Our Vision-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="20dp"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Our Vision"
                    android:textSize="30sp"
                    android:textColor="@color/text"
                    />
                <View
                    android:layout_width="55dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="50dp"
                    android:background="@color/primary" />
            </RelativeLayout>
            <TextView
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pizza Shop arose from a desire to bring people peace and happiness, two of the most fundamental aspects of modern life. The term Pizza Shop translates to Pizza for Peace, with the ultimate goal of making the globe smile for peace. We all deserve genuine smiles, pleasure, and a peaceful life. Apart from delivering worthy meals made from sustainable resources, we want to encourage mindfulness and inner calm in our guests. We strive to make a significant contribution to peace and happiness, one smile at a time."
                android:textSize="18sp"
                android:textColor="@color/text"
                />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>